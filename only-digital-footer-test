from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.service import Service
from webdriver_manager.chrome import ChromeDriverManager

def test_footer():
    driver = webdriver.Chrome(service=Service(ChromeDriverManager().install()))
    try:
        driver.get("https://only.digital/")
        footer = driver.find_element(By.TAG_NAME, 'footer')
        
        # Проверка основных элементов
        elements = {
            'Лого': 'footer__logo',
            'Меню': 'footer__menu',
            'Контакты': 'footer__contacts',
            'Соцсети': 'footer__social',
            'Копирайт': 'footer__copyright'
        }
        
        for name, class_name in elements.items():
            assert footer.find_element(By.CLASS_NAME, class_name).is_displayed(), \
                   f"Элемент {name} не найден"
        
        print("Все элементы футера найдены")
    finally:
        driver.quit()

if __name__ == "__main__":
    test_footer()
